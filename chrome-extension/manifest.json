{
  "manifest_version": 2,

  "name": "Getting started ArMingMo",
  "description": "This extension supports for playing King",
  "version": "0.0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "activeTab",
    "*://wg.pubgame.tw/*",
    "*://*.icantw.com/*",
    "cookies",
    "webRequest",
    "webRequestBlocking",
    "notifications", 
    "tabs" 
  ]
}
